{% extends 'FarmBundle::layout.html.twig' %}

{% block title %}FarmBundle:Product:add{% endblock %}

{% block main %}
<!-- Jumbotron -->
<div class="jumbotron">
  <h1>Detail produit</h1>
</div>

  <div class="row">
    <div class="col-lg-4">
      <h2>{{ product.name }}</h2>
        {% for img in product.images %}
          <img src="{{ asset('uploads/' ~ img.filename) }}" alt="">
        {% endfor %}
    </div>
    <div class="col-lg-8">
      <h2>Categorie :</h2><p> {{ product.category.label }}</p>
      <h2>Description :</h2><p> {{ product.description }}</p>
      <h2>date de création :</h2><p> {{ product.dateCreated|date('d-m-Y') }}</p>
      <h2>Prix TTC :</h2><p> {{ product.price|number_format(2, ',', '') }} €</p>

      <form action="{{ path('add_cart') }}" method="post">
        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}">


        <input type="hidden" id="username" name="_username" value="{{ last_username }}" />


        <input type="hidden" id="password" name="_password" />

          {#
              If you want to control the URL the user
              is redirected to on success (more details below)
              <input type="hidden" name="_target_path" value="/account" />
          #}

        <button type="submit">login</button>
      </form>


    </div>
  </div>
<!-- Example row of columns -->

{% endblock %}
